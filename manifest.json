{
  "manifest_version": 3,
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_popup": "hello.html"
  },

  "content_scripts": [{
     "js": ["popup.js"],
     "matches": ["http://*/*", "https://*/*"]
   }],
  "permissions": ["alarms", "tabs"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
